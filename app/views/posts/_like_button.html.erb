<% like = current_user.likes.find_by(post: post) %>

<% if like %>

<%= link_to post_like_path(post, like), method: :delete, class: "p-3", remote: true do %>
<i class="fas fa-heart"></i>
<% end %>

<% else %>

<%= link_to post_likes_path(post), method: :post, class: "p-3", remote: true do %>
<i class="far fa-heart"></i>
<% end %>

<% end %>
