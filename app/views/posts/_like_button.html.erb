<% like = current_user.likes.find_by(post: post) %>

<% if like %>

<%= link_to post_like_path(post, like), method: :delete, class: "btn btn-sm rounded-pill btn-outline-primary text-decoration-none active", remote: true do %>
  <i class="fas fa-heart"></i> <small><%= post.likes.count if post.likes.count > 0 %></small>
<% end %>

<% else %>

<%= link_to post_likes_path(post), method: :post, class: "btn btn-sm rounded-pill btn-outline-primary text-decoration-none", remote: true do %>
  <i class="far fa-heart"></i> <small><%= post.likes.count if post.likes.count > 0 %></small>
<% end %>

<% end %>
