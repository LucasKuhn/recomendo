<div data-controller="infinite-scroll" data-action="scroll@window->infinite-scroll#scroll">

  <div data-target="infinite-scroll.entries" class="row row-cols-1 row-cols-lg-2">
    <%= render @posts %>
  </div>

  <div data-target="infinite-scroll.pagination" class="d-none">
    <%= pagy_nav(@pagy).html_safe %>
  </div>

</div>

<% if @posts.empty? %>
<div class="row d-block d-md-none">
  <div class="col-md-6">
    <div class="card border-0 border-radius-1 shadow-sm h-100 mx-md-2 overflow-hidden">
      <div class="p-2">

        <div class="d-flex justify-content-center">
          <div class="mr-3 d-flex align-items-center">
            <%= image_tag current_user.thumbnail, size: 40, class:'rounded-circle' %>
          </div>
          <div>
            <button type="button" class="btn btn-primary rounded-pill my-1 font-poppins" data-toggle="modal" data-target="#new-post-category">
              <i class="las la-plus"></i>
              Adicionar
            </button>
          </div>
          <div class="ml-3">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
