<div class="card border-left-<%= post.category.try(:name) %> box-shadow">

  <div class="card-header">
    <div>
      <small>
        <% post.tags.each do |tag| %>
        <span class="badge badge-pill badge-info py-1"><%= tag.name %></span>
        <% end %>
      </small>
      <% if post.user == current_user %>
        <%= link_to "Editar", edit_post_path(post), class: "float-right" %>
      <% end %>
    </div>
    <% if post.tags.any? || post.user == current_user %>
      <hr class="my-1">
    <% end %>
      <div class="d-flex justify-content-between align-items-center">
        <div class="mr-4">
          <img class="rounded-circle" width="40" src="https://picsum.photos/50/50" alt="">
        </div>
        <div class="w-100">
          <div class="h7 m-0"><%= post.user.try(:email) %></div>
          Recomendou um <%= post.category.try(:name) %><br>
          <small class="text-muted"><%= localize(post.created_at, format: :long) %></small>
        </div>
        <div class="ml-4">
          <button type="button" class="btn btn-primary btn-circle"><%= post.category.try(:icon) %></button>
        </div>
      </div>
  </div>


  <div class="card-body">
    <span class="h5"><%= post.title %></span>

    <% if post.url.present? %>
    <%= link_to post.url, target:"_blank" do %>
    <br>Acessar link <i class="fas fa-angle-right"></i>
    <% end %>
    <% end %>
    <p class="card-text">
      <%= post.body.try(:truncate,80, separator: /\s/).try(:html_safe) %>
    </p>

  </div>

  <div class="card-footer bg-transparent text-right">
    <% if like = current_user.likes.find_by(post: post) %>
    <%= link_to post_like_path(post, like), method: :delete, class: "p-2" do %>
    <i class="fas fa-heart"></i>
    <% end %>
    <% else %>
    <%= link_to post_likes_path(post), method: :post, class: "mx-3" do %>
    <i class="far fa-heart"></i>
    <% end %>
    <% end %>
    <a href="#"><i class="far fa-comment"></i>Comment</a>
    <a href="#"><i class="far fa-bookmark"></i>Save</a>

  </div>
</div>
