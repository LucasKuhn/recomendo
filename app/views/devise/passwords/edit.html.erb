<h2><%= t('.change_your_password') %></h2>

<hr>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:'text-left' }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<%= f.hidden_field :reset_password_token %>

<div class="form-label-group">
  <!-- <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
  <% end %> -->
  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: true, class: "form-control" %>
  <%= f.label :password, t('.new_password') %>
</div>

<div class="form-label-group">
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: true, class: "form-control" %>
  <%= f.label :password_confirmation, t('.confirm_new_password') %>
</div>

<div class="actions">
  <%= f.submit t('.change_my_password'), class: 'btn btn-lg btn-secondary w-100' %>
</div>
<% end %>

