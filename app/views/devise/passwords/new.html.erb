<h2><%= t('.forgot_your_password') %></h2>

<hr>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'text-left' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-secondary w-100' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
