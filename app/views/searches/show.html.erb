  <div class="spinner-border" role="status">
    <span class="sr-only">Loading...</span>
  </div>
</div>
`
function delay(fn, ms) {
  let timer = 0
  return function(...args) {
    clearTimeout(timer)
    timer = setTimeout(fn.bind(this, ...args), ms || 0)
  }
}

$( "#input" ).keyup(function() {
  $("#search-result").html(spinner);
});

$('#input').keyup(

