<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">+ Nova Recomendação</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <% @post ||= Post.new %>
      <%= form_for @post do |f| %>

      <div class="modal-body">
        
        <div class="form-group">
          <%= f.label :title, "Título" %>
          <%= f.text_field :title, class:"form-control", placeholder:"O que você gostou?", autofocus:true %>
        </div>

        <div class="form-group">
          <%= f.label :category_id, "Categoria" %>
          <%= f.select :category_id, categories_for_select, { include_blank:"" }, { class:'form-control' } %>
        </div>

        <div class="form-group">
          <%= f.label :tag_ids, "Tags" %>
          <%= f.select :tag_ids, Tag.all.pluck(:name,:id), { include_blank:"" }, { class:'form-control', multiple:false } %>
        </div>

        <div class="form-group">
          <%= f.label :url, "Link" %>
          <%= f.text_field :url, class:"form-control", placeholder:"" %>
        </div>

        <div class="form-group">
          <%= f.label :body, "Descrição" %>
          <%= f.text_area :body, class:"form-control", placeholder:"" %>
        </div>

      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-outline-secondary"  data-dismiss="modal">Cancelar</button>
        <%= f.submit "Publicar", class:"btn btn-primary" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
