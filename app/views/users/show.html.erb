

<div class="my-3 p-3 bg-white rounded shadow-sm">
  <div class="row mx-3">
    <div class="col-md-4">
      <div class="d-flex align-items-center justify-content-center">
        <div class="overflow-hidden rounded-circle">
          <%= image_tag @user.profile_image, size: 160 %>
        </div>
      </div>
    </div>
    <div class="col-md-8 my-3">
      <div class="d-flex justify-content-center justify-content-md-start">
        <h2>
          <small><%= @user.full_name %></small>
        </h2>
        <div class="my-auto mx-2">
          <% if current_user == @user %>
          <%= link_to edit_user_path, class: "h4" do %>
            <i class="las la-cog"></i>
          <% end %>
          <% elsif current_user.follows?(@user) %>
          <%= link_to user_follow_path(@user, current_user), method: :delete, class: "btn rounded-pill btn-outline-primary" do %>
          <i class="las la-user-friends"></i>  <i class="las la-check "></i>
          <% end %>
          <% else %>
          <%= link_to user_follows_path(@user), method: :post, class: "btn rounded-pill btn-primary" do %>
          <strong>Adicionar</strong>
          <% end %>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-center justify-content-md-start">
          <span class="mr-2"><strong><%= @user.followers_count - 1 %></strong> seguidores</span>
          <span class="mr-2"><strong><%= @user.posts.count %></strong> recomendações</span>
      </div>

    </div>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-2 my-3">
  <%= render partial: "posts/post", collection: @user.posts %>
</div>
