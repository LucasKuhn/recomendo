<%= form_for(@user, html: { method: :put }) do |f| %>
<div class="form-group">
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :image, class: 'form-control' %>
</div>
<%= f.submit %>
<% end %>
